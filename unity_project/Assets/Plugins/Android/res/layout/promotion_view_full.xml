<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/promotion_view_full_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<WebView
			android:id="@+id/promotion_view_full_webview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<ProgressBar
			android:id="@+id/promotion_view_spinner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="gone"
			/>

	</RelativeLayout>

	<RelativeLayout
        android:id="@+id/promotion_view_full_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <ImageView
	        android:id="@+id/iv_promotion_view_full_close_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
	    
    </RelativeLayout>
    
</FrameLayout>
