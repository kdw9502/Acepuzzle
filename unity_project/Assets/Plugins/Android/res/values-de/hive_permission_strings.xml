    <!-- PermissionGroup 'PHONE' -->
    <string name="hive_permission_phone_title">TELEFON</string>
    <string name="hive_permission_phone_desc">(Optional) Die Erlaubnis ist erforderlich, um mit In-Game-Events und Belohnungen fortzufahren und hat keinen Einfluss auf Anrufe.</string>
    
    <!-- PermissionGroup 'CONTACTS' -->
    <string name="hive_permission_contacts_title">KONTAKTE</string>
    <string name="hive_permission_contacts_desc">(Optional) Deine Zustimmung wird benötigt, um deine Freundesliste mit HIVE zu synchronisieren.</string>
    
    <!-- PermissionGroup 'STORAGE' -->
    <string name="hive_permission_storage_title">SPEICHERUNG</string>
    <string name="hive_permission_storage_desc">(Optional) Die Erlaubnis zur Speicherung der Spieldaten ist erforderlich und hat keinen Zugriff auf persönliche Dateien wie Fotos.</string>
    
    <!-- PermissionGroup 'LOCATION' -->
    <string name="hive_permission_location_title">STANDORT</string>
    <string name="hive_permission_location_desc">Die Erlaubnis ist erforderlich, um auf den Standort des aktuellen Geräts zuzugreifen.</string>
    
    <!-- PermissionGroup 'MICROPHONE' -->
    <string name="hive_permission_microphone_title">MIKRO</string>
    <string name="hive_permission_microphone_desc">Die Erlaubnis zur Nutzung der Sprachfunktion ist erforderlich.</string>
    
    <!-- PermissionGroup 'CAMERA' -->
    <string name="hive_permission_camera_title">KAMERA</string>
    <string name="hive_permission_camera_desc">Die Erlaubnis ist erforderlich, um Fotos zu machen und Videos aufzunehmen.</string>
    
